<table>
  <thead>
    <tr>
      <th>商品id</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= item.name %></td>
        <td><%= item.tax_excluded_price %></td>
        <td><%= item.category_id %></td>
        <td>
          <% if item.sale_status == true %>
            <p>販売中</p>
          <% else item.sale_status == false %>
            <p>販売停止中</p>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>