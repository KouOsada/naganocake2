<%= form_with model: @category, url: admin_categories_path, local: true do |f| %>
  <%= f.label :"ジャンル名" %>
  <%= f.text_field :name %>
  <%= f.submit '追加' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to '編集する', edit_admin_category_path(category.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>